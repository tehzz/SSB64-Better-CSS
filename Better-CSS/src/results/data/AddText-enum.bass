//bass-n64
//--- Additional Text Enum -----------------------------------------------------
// If the name string has more than one line
scope AddText {
  constant null(0xFF)
  constant polygon(0x00)
  constant hand(0x01)
  constant metal(0x02)
}

//--- Additional Text Strings and Pointer Array --------------------------------
align(4)
scope addstrs {
  Polygon:
    asciiz("POLYGON")

  Metal:
    asciiz("METAL")

  Hand:
    asciiz("HAND")
}

align(4)
scope addTextArr: {
  constant length(3)

  dw  addstrs.Polygon   // 0x00
  dw  addstrs.Hand      // 0x01
  dw  addstrs.Metal     // 0x02
}
align(4)

// Verbose Print info [-d v on cli]
if {defined v} {
  print "Included AddText-enum.bass\n"
}
