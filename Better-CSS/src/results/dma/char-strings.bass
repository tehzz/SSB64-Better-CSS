    { //0x06 - Yoshi
      dw      Yoshi
      float32  30.0
      float32   1.0
      float32 170.0
      db      textPallet.red
      db      addText.enum.null
      dh      0x0000
    }
    { //0x07 - C. Falcon
      dw      CFalcon
      float32  27.0
      float32   0.7
      float32 178.0
      db      textPallet.red
      db      addText.enum.null
      dh      0x0000
