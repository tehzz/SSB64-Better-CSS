    { //0x19 - Polygon Ness
      dw      Ness
      float32  50.0
      float32   1.0
      float32 160.0
      db      textPallet.purple
      db      addText.enum.polygon
      dh      0x0000
    }
    { //0x1A - Giant DK
      dw      GiantDK
      float32  27.0
      float32   0.7
      float32 175.0
      db      textPallet.red
      db      addText.enum.null
      dh      0x0000
    }
  }
  //---End Character Structs-----------

}
